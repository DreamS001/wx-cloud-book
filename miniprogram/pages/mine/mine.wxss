page{
  background: #f9f9f9;
}
.top_bg{
  width: 100%;
  height: 250rpx;
  /* background: #6dcaaa; */
  background:url("https://www.baixl001.com/mentality/picture/013.png");
  background-size:cover;
}
.user_box{
  width: 702rpx;
  height: 200rpx;
  background: #ffffff;
  margin: -100rpx 0 0;
  margin-left: 24rpx;
  box-shadow: 0rpx 0rpx 20rpx 0rpx 
		rgba(109, 202, 170, 0.3);
	border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user_box .user_img{
  width: 166rpx;
  height: 166rpx;
  /* border-radius: 50%; */
	border: solid 2px #ffffff;
  margin-top: -83rpx;
}
.user_box .user_img image{
  width: 100%;
  height: 100%;
  /* border-radius: 50%; */
}
.user_box .userinfo-nickname{
  margin-top: 21rpx;
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}

.chooseItem{
  margin: 30rpx 0;
  padding: 0 45rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.chooseItem .item_box{
  width: 100%;
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.chooseItem .item_box .item_left{
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
}
.chooseItem .item_box .item_left image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 21rpx;
}
.chooseItem .item_box image{
  width: 12rpx;
  height: 22rpx;
}